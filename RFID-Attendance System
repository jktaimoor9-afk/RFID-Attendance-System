#include <SPI.h>
#include <MFRC522.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define SS_PIN 10
#define RST_PIN 9
#define BUZZER 6
#define RED_LED 7

MFRC522 rfid(SS_PIN, RST_PIN);
LiquidCrystal_I2C lcd(0x27, 16, 2);

// Allowed RFID UID
byte allowedCard[4] = {0x4C, 0x9A, 0x3B, 0x02};

bool checkAllowed() {
  for (byte i = 0; i < 4; i++) {
    if (rfid.uid.uidByte[i] != allowedCard[i]) {
      return false;
    }
  }
  return true;
}

void showDefaultScreen() {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("RFID System Ready");
  lcd.setCursor(0, 1);
  lcd.print("Scan Card...");
}

void setup() {
  Serial.begin(9600);

  pinMode(BUZZER, OUTPUT);
  pinMode(RED_LED, OUTPUT);
  digitalWrite(RED_LED, LOW);

  SPI.begin();
  rfid.PCD_Init();

  lcd.init();
  lcd.backlight();

  showDefaultScreen();
}

void loop() {
  if (!rfid.PICC_IsNewCardPresent()) return;
  if (!rfid.PICC_ReadCardSerial()) return;

  lcd.clear();

  if (checkAllowed()) {
    // Access Granted
    digitalWrite(RED_LED, LOW);

    lcd.setCursor(0, 0);
    lcd.print("Access Granted");
    lcd.setCursor(0, 1);
    lcd.print("Welcome!");

    // Success beep
    tone(BUZZER, 1200, 150);
    delay(200);
    tone(BUZZER, 1500, 150);

    Serial.println("ACCESS GRANTED");
  } else {
    // Access Denied
    digitalWrite(RED_LED, HIGH);

    lcd.setCursor(0, 0);
    lcd.print("Access Denied");
    lcd.setCursor(0, 1);
    lcd.print("Try Again!");

    // Denied beep
    tone(BUZZER, 400, 300);
    delay(100);
    tone(BUZZER, 300, 300);

    Serial.println("ACCESS DENIED");

    digitalWrite(RED_LED, LOW);
  }

  delay(1500);           // Wait so user can read the message
  showDefaultScreen();   // Reset LCD back to "Scan Card..."
  rfid.PICC_HaltA();
}
